<Window x:Class="AirlineTickets.RoundTripFlights"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirlineTickets"
        mc:Ignorable="d"
        Title="Round Trip Flights" WindowStartupLocation="CenterScreen" Height="450" Width="768">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="331*"/>
            <ColumnDefinition Width="65*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="Images/air.jpg"/>
        </Grid.Background>
        <DataGrid Name="DgRoundtrip" GridLinesVisibility="None" HorizontalAlignment="Left" Height="319" Opacity="0.8" Margin="32,67,0,0" VerticalAlignment="Top" Width="653" Grid.ColumnSpan="2"/>
        <Button x:Name="BtnPickFlight" Opacity="0.8" Background="#FF725959" Foreground="White" Content="Pick A Seat" HorizontalAlignment="Left" Margin="32,20,0,0" VerticalAlignment="Top" Width="96" Height="30" Click="BtnPickFlight_Click"/>
        <Button x:Name="BtnFilter" Opacity="0.8" Background="#FF725959" Foreground="White" Content="Filter" HorizontalAlignment="Left" Margin="151,20,0,0" VerticalAlignment="Top" Width="85" Height="30" Click="BtnFilter_Click"/>

    </Grid>
</Window>
