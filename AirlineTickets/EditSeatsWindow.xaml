<Window x:Class="AirlineTickets.EditSeatsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirlineTickets"
        mc:Ignorable="d"
        Title="Edit Seats Window" Height="392" Width="669" Background="#FFF1EAEA" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="256*"/>
            <ColumnDefinition Width="405*"/>
        </Grid.ColumnDefinitions>
        <DataGrid Name ="DGSeat" GridLinesVisibility="None" HorizontalAlignment="Left" Height="269" Margin="29,43,0,0" VerticalAlignment="Top" Width="490" Grid.ColumnSpan="2"/>
        <Button Name="BtnDelete" Content="Delete" HorizontalAlignment="Left" Margin="285,43,0,0" VerticalAlignment="Top" Width="88" Height="31" Click="BtnDelete_Click" Grid.Column="1"/>
        <Button Name="BtnEdit" Content="Edit" HorizontalAlignment="Left" Margin="285,95,0,0" VerticalAlignment="Top" Width="88" Height="29" Click="BtnEdit_Click" Grid.Column="1"/>
        <Button Name="BtnAdd" Content="Add" HorizontalAlignment="Left" Margin="285,143,0,0" VerticalAlignment="Top" Width="88" Height="32" Click="BtnAdd_Click" Grid.Column="1"/>

    </Grid>
</Window>
