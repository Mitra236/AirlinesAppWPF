<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirlineTickets.Validation"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Class="AirlineTickets.EditFlightsWindow"
        mc:Ignorable="d"
        Title="Edit Flights Window" Height="559" Width="389" Background="#FFEAE3E3" WindowStartupLocation="CenterScreen" FontWeight="Bold">
    <Grid Margin="0,0,0,-2">
        <Label x:Name="LblFlightNum" Content="Flight Number" HorizontalAlignment="Left" Margin="38,29,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.813,0.106" Width="147" Height="38"/>
        <Label x:Name="LblDepartureTime" Content="Departure Time" HorizontalAlignment="Left" Margin="38,113,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.813,0.106" Width="147" Height="42"/>
        <Label x:Name="LblArrivalTime" Content="Arrival Time" HorizontalAlignment="Left" Margin="38,170,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.813,0.106" Width="147" Height="42"/>
        <Label x:Name="LblDeparturePlace" Content="Departure Place" HorizontalAlignment="Left" Margin="38,228,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.813,0.106" Width="147" Height="42"/>
        <Label x:Name="LblDestination" Content="Destination" HorizontalAlignment="Left" Margin="38,285,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.813,0.106" Width="147" Height="42"/>
        <Label x:Name="LblOneWayTicketPrice" Content="One Way Ticket Price" HorizontalAlignment="Left" Margin="38,341,0,0" VerticalAlignment="Top" Width="147" Height="39"/>
        <TextBox Name ="tbFlightNum"  HorizontalAlignment="Left" Height="32" TextWrapping="Wrap" VerticalAlignment="Top" Width="132" Margin="201,24,0,0">
            <TextBox.Text>
                <Binding Path="FlightNumber"
                         NotifyOnValidationError="True" 
                         ValidatesOnDataErrors="True" 
                         ValidatesOnExceptions="True"
                         UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">

                    <Binding.ValidationRules>
                        <local:FlightValidation/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
            <Validation.ErrorTemplate>
                <ControlTemplate>
                    <StackPanel>
                        <AdornedElementPlaceholder/>
                        <TextBox Text="{Binding Path=ErrorContent}" Foreground="Red"></TextBox>
                    </StackPanel>
                </ControlTemplate>
            </Validation.ErrorTemplate>
        </TextBox>
        <TextBox Name ="tbOneWayTicketPrice" HorizontalAlignment="Left" Height="39" Margin="201,341,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="132">
            <TextBox.Text>
                <Binding Path="OneWayTicketPrice"
                         NotifyOnValidationError="True" 
                         ValidatesOnDataErrors="True" 
                         ValidatesOnExceptions="True"
                         UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">

                    <Binding.ValidationRules>
                        <local:OneWayTicketPriceValidation/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
            <Validation.ErrorTemplate>
                <ControlTemplate>
                    <StackPanel>
                        <AdornedElementPlaceholder/>
                        <TextBox Text="{Binding Path=ErrorContent}" Foreground="Red"></TextBox>
                    </StackPanel>
                </ControlTemplate>
            </Validation.ErrorTemplate>
        </TextBox>
        <ComboBox Name="CbDepPlace" HorizontalAlignment="Left" Margin="201,228,0,0" SelectedItem="{Binding Path=DeparturePlace}" VerticalAlignment="Top" Width="132" Height="29"/>
        <ComboBox Name ="CbDestination" HorizontalAlignment="Left" Margin="201,285,0,0" SelectedItem="{Binding Path=Destination}" VerticalAlignment="Top" Width="132" Height="27"/>
        <Button x:Name="BtnDiscard" Content="Discard" Background="DarkGray" HorizontalAlignment="Left" Margin="38,471,0,0" VerticalAlignment="Top" Width="117" Height="35" Click="BtnDiscard_Click"/>
        <Button x:Name="BtnSave" Content="Save" Background="IndianRed" HorizontalAlignment="Left" Margin="217,471,0,0" VerticalAlignment="Top" Width="116" Height="35" Click="BtnSave_Click"/>
        <xctk:DateTimePicker HorizontalAlignment="Left" Margin="201,113,0,0" Value="{Binding Path =DepartureTime}"  VerticalAlignment="Top" Width="132" Height="32"/>
        <xctk:DateTimePicker HorizontalAlignment="Left" Margin="201,170,0,0"  Value="{Binding Path=ArrivalTime}" VerticalAlignment="Top" Width="132" Height="32"/>
        <Label x:Name="lblAircompanyId" Content="Aircompany ID" HorizontalAlignment="Left" Margin="38,409,0,0" VerticalAlignment="Top" Width="126"/>
        <ComboBox x:Name="cbCompanyId" HorizontalAlignment="Left" Margin="201,409,0,0" SelectedItem="{Binding Path=CompanyPassword}" VerticalAlignment="Top" Width="132" Height="26"/>
        <Label x:Name="lblAirplane" Content="Airplane" HorizontalAlignment="Left" Margin="38,67,0,0" VerticalAlignment="Top" Width="105"/>
        <ComboBox x:Name="cbAirplaneId" SelectedItem="{Binding Path=AirplaneId}" HorizontalAlignment="Left" Margin="201,67,0,0" VerticalAlignment="Top" Width="132" Height="26"/>

    </Grid>
</Window>
